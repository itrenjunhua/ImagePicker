<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.renj.pickertest">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.renj.pickertest.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.renj.pickertest.activity.MainActivity"
            android:label="@string/image_selected_crop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.renj.pickertest.activity.ImagePickerActivity"
            android:label="@string/image_selected" />

        <activity
            android:name="com.renj.pickertest.activity.CustomImagePickerActivity"
            android:label="@string/image_selected_custom" />

        <activity
            android:name="com.renj.pickertest.activity.CropSingleActivity"
            android:label="@string/image_crop_single" />

        <activity
            android:name="com.renj.pickertest.activity.CustomCropSingleActivity"
            android:label="@string/image_crop_single_custom" />

        <activity
            android:name="com.renj.pickertest.activity.CropMultiActivity"
            android:label="@string/image_crop_more" />

        <activity
            android:name="com.renj.pickertest.activity.CustomCropMultiActivity"
            android:label="@string/image_crop_more_custom" />
    </application>

</manifest>