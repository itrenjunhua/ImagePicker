<?xml version="1.0" encoding="utf-8"?><!--裁剪单张图片布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/image_picker_color_black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/image_picker_selector_main_bt"
            android:gravity="center"
            android:minWidth="58dp"
            android:padding="8dp"
            android:text="取消"
            android:textColor="@color/image_picker_color_white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="裁剪图片"
            android:textColor="@color/image_picker_color_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/image_picker_selector_main_bt"
            android:gravity="center"
            android:minWidth="58dp"
            android:padding="8dp"
            android:text="裁剪"
            android:textColor="@color/image_picker_color_white"
            android:textSize="12sp" />

    </RelativeLayout>

    <com.renj.imagepicker.weight.IPImageCropView
        android:id="@+id/image_crop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>